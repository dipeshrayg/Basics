        var pass, fail;
        let marks = [85, 90, 78, 92, 88];
        for (let j = 0; j < marks.length; j++) {
            if (marks[j] >= 80) {
                pass = marks[j];
            } else {
                fail = marks[j];
            }
        }
        document.write("Marks: " + marks.join(", ") + "<br>");
        document.write("Total marks: " + marks.length + "<br>");
        document.write("Highest mark: " + Math.max(...marks) + "<br>");
        document.write("Lowest mark: " + Math.min(...marks) + "<br>");
        document.write("Passed marks: " + pass + "<br>");
        document.write("Failed marks: " + fail + "<br>");
    </script>
